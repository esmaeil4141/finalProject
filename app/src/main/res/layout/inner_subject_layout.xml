<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:background="@color/inner_subject_background"
    android:elevation="@dimen/small_elevation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title_color"
        android:text="عنوان مطلب"
        android:textSize="@dimen/small_title_size"
        android:paddingLeft="@dimen/typical_padding"
        android:paddingRight="@dimen/typical_padding"
        android:paddingTop="@dimen/typical_padding"
        android:id="@+id/small_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@color/gray_text"
        android:text="این مطلب برای نمنونه تایت پشده است بعدا این متن را به صورت کامل پاک کنید با تشکر و احترام و دیگه از این طرفا رد نشید لطفا دوستان دستتون درد نکنه \n من از این جا \n برو بیخیال اگر تونستی بیا ما همینه همین جا هستنیم  و منتظر شما می مانیم"
        android:padding="@dimen/small_margin"
        android:textSize="@dimen/text_size"
        android:id="@+id/small_text"
        />

</LinearLayout>